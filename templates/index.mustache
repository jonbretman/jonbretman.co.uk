<!doctype html>
<html>
{{ > partials/head }}
<body class="{{ page.name }}">
<div id="main-container">

    {{ > partials/header }}

    <section id="main-content">
        <div class="container">

            {{ # page.isPost }}
            <div class="post-header">
                <h2 class="post-title">{{ page.title }}</h2>

                <p class="post-date">Posted {{ page.dateString }}</p>

                {{ # page.categories.length }}
                <p class="post-categories">
                    Tags:
                    {{ # page.categories }}
                    <span class="post-category">{{ . }}</span>
                    {{ / page.categories }}
                </p>
                {{ / page.categories.length}}

                <div class="tweet-button">
                    <a rel="jonbretman" class="twitter-share-button" href="https://twitter.com/share">Tweet</a>
                </div>
            </div>

            <hr>
            {{ / page.isPost }}

            {{{ page.content }}}

            {{ # page.isPost }}
            <hr>

            <div id="disqus_thread"></div>
            <script type="text/javascript">

                var disqus_shortname = 'jonbretman';

                (function () {
                    var dsq = document.createElement('script');
                    dsq.type = 'text/javascript';
                    dsq.async = true;
                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                })();

            </script>
            <noscript>Please enable JavaScript to view the <a
                    href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a>
            </noscript>
            <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span
                    class="logo-disqus">Disqus</span></a>
            {{ / page.isPost }}

        </div>
    </section>

    {{ > partials/footer }}

</div>

<script>
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date();
        a = s.createElement(o),
                m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-39431439-1', 'jonbretman.co.uk');
    ga('send', 'pageview');

    window.twttr = (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0], t = window.twttr || {};
        if (d.getElementById(id))return;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);
        t._e = [];
        t.ready = function (f) {
            t._e.push(f);
        };
        return t;
    }(document, "script", "twitter-wjs"));
</script>

</body>
</html>
